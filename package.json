{
    "name": "d3-bars",
    "version": "2.0.0",
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "build": "rollup -c",
        "dev": "rollup -c -w"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "^1.3.0",
        "babel-eslint": "^10.0.3",
        "eslint": "^6.6.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-html": "^6.0.0",
        "eslint-plugin-standard": "^4.0.1",
        "healthier": "^3.2.0",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "rollup": "^1.26.3",
        "rollup-plugin-buble": "^0.19.8",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-livereload": "^1.0.4",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-svelte": "^5.1.1",
        "rollup-plugin-terser": "^5.2.0",
        "svelte": "^2.16.1",
        "svelte-extras": "^2.0.2",
        "svelte2": "npm:svelte@^2.16.1"
    },
    "dependencies": {
        "@datawrapper/blocks": "^0.14.6",
        "@datawrapper/chart-core": "^8.18.4",
        "@datawrapper/controls": "^2.25.6",
        "@datawrapper/shared": "^0.27.4",
        "d3-array": "^1.2.4",
        "d3-collection": "^1.0.7",
        "d3-color": "^1.4.0",
        "d3-interpolate": "^1.3.2",
        "d3-jetpack": "^2.0.20",
        "d3-scale": "^2.2.2",
        "d3-selection": "^1.4.0",
        "dayjs": "^1.8.17",
        "lodash-es": "^4.17.15",
        "numeral": "^2.0.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        },
        "extends": [
            "plugin:@tivac/svelte/svelte"
        ],
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    }
}
