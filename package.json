{
    "name": "@datawrapper/plugin-image-publishing",
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/datawrapper/plugin-image-publishing#readme",
    "bugs": {
        "url": "https://github.com/datawrapper/plugin-image-publishing/issues"
    },
    "scripts": {
        "clean:static": "rm static/*.map",
        "build:src": "cd src && npm run build",
        "build:settings": "cd src/team-settings && npm run build",
        "build": "npm run build:src && npm run build:settings && npm run clean:static",
        "lint": "healthier '**/*.{js,html}' && prettier --check '**/*.js'",
        "format": "prettier '**/*.js' --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/plugin-image-publishing.git"
    },
    "dependencies": {
        "aws-sdk": "2.717.0",
        "lodash": "4.17.19"
    },
    "devDependencies": {
        "@tivac/eslint-plugin-svelte": "1.3.0",
        "eslint-plugin-html": "^6.1.0",
        "healthier": "4.0.0",
        "husky": "^4.2.5",
        "lint-staged": "10.2.11",
        "prettier": "^2.1.1"
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "dot-notation": "warn",
            "import/no-absolute-path": "warn",
            "prefer-const": "warn"
        },
        "plugins": [
            "html",
            "@tivac/svelte"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run build && git add static/* && git rev-parse HEAD > .githead && git add .githead"
        }
    },
    "lint-staged": {
        "*.{js,html}": [
            "healthier",
            "prettier --write"
        ]
    }
}
